{
  "name": "express-scaffolding",
  "version": "1.0.0",
  "description": "Express scaffolding for interactive SPAs",
  "main": "server.ts",
  "dependencies": {
    "bcrypt": "^5.0.1",
    "connect-mongo": "^4.6.0",
    "dotenv": "^10.0.0",
    "express": "^4.17.1",
    "express-session": "^1.17.2",
    "helmet": "^4.6.0",
    "http-status-codes": "^2.1.4",
    "joi": "^17.5.0",
    "mongoose": "^6.0.15",
    "ts-node": "^10.4.0",
    "typescript": "^4.5.2",
    "validator": "^13.7.0",
    "winston": "^3.3.3"
  },
  "devDependencies": {
    "@types/helmet": "^4.0.0",
    "@types/bcrypt": "^5.0.0",
    "@types/connect-mongo": "^3.1.3",
    "@types/dotenv": "^8.2.0",
    "@types/express": "^4.17.13",
    "@types/express-session": "^1.17.4",
    "@types/faker": "^5.5.9",
    "@types/http-status-codes": "^1.2.0",
    "@types/jest": "^27.0.3",
    "@types/supertest": "^2.0.11",
    "@types/validator": "^13.7.0",
    "@types/winston": "^2.4.4",
    "faker": "^5.5.3",
    "jest": "^27.4.3",
    "supertest": "^6.1.6",
    "ts-jest": "^27.1.1",
    "ts-node-dev": "^1.1.8"
  },
  "scripts": {
    "start:dev": "ts-node-dev --respawn --transpile-only server.ts",
    "start:prod": "ts-node --transpile-only server.ts",
    "test": "jest"
  },
  "jest": {
    "verbose": true,
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "rootDir": ".",
    "testRegex": ".*\\.spec\\.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "collectCoverageFrom": [
      "**/*.(t|j)s"
    ],
    "testEnvironment": "node"
  },
  "keywords": [],
  "author": "",
  "license": "ISC"
}
